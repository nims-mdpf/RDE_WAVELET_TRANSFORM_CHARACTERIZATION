{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://dice.nims.go.jp/rde/dataset-templates/invoice.schema.json",
    "description": "固有情報と試料情報のスキーマ",
    "type": "object",
    "required": [
        "custom"
    ],
    "properties": {
        "custom": {
            "type": "object",
            "label": {
                "ja": "固有情報",
                "en": "Custom Information"
            },
            "required": [],
            "properties": {
                "key1": {
                    "label": {
                        "ja": "キー1",
                        "en": "key1"
                    },
                    "type": "string"
                },
                "key2": {
                    "label": {
                        "ja": "キー2",
                        "en": "key2"
                    },
                    "type": "string"
                },
                "key3": {
                    "label": {
                        "ja": "キー3",
                        "en": "key3"
                    },
                    "type": "string"
                },
                "key4": {
                    "label": {
                        "ja": "キー4",
                        "en": "key4"
                    },
                    "type": "string"
                },
                "key5": {
                    "label": {
                        "ja": "キー5",
                        "en": "key5"
                    },
                    "type": "string"
                },
                "common_data_type": {
                    "label": {
                        "ja": "登録データタイプ",
                        "en": "Data type"
                    },
                    "type": "string",
                    "default": "wavelet characterization"
                },
                "common_data_origin": {
                    "type": "string",
                    "label": {
                        "ja": "データの起源",
                        "en": "Data Origin"
                    },
                    "default": "experiments",
                    "enum": [
                        "experiments",
                        "informatics and data science",
                        "simulations",
                        "theory",
                        "other"
                    ]
                },
                "common_technical_category": {
                    "type": "string",
                    "label": {
                        "ja": "技術カテゴリー",
                        "en": "Technical Category"
                    },
                    "default": "calculation"
                },
                "common_reference": {
                    "type": "string",
                    "label": {
                        "ja": "参考文献",
                        "en": "Reference"
                    }
                },
                "calculation_calculation_method": {
                    "type": "string",
                    "label": {
                        "ja": "計算方法",
                        "en": "Calculation method"
                    },
                    "default": "wavelet characterization"
                },
                "calculation_supercom_or_pc": {
                    "type": "string",
                    "label": {
                        "ja": "SuperComまたはPC",
                        "en": "SuperCom or PC"
                    },
                    "default": "azure cloud"
                },
                "calculation_os": {
                    "type": "string",
                    "label": {
                        "ja": "オペレーティングシステム",
                        "en": "OS"
                    },
                    "default": "canonical 0001-com-ubuntu-server-focal 20_04-lts"
                },
                "calculation_software_name": {
                    "type": "string",
                    "label": {
                        "ja": "ソフトウェア名称",
                        "en": "Software name"
                    },
                    "default": "wavelet characterization"
                },
                "calculation_software_version": {
                    "type": "string",
                    "label": {
                        "ja": "ソフトウェアバージョン",
                        "en": "Software version"
                    }
                },
                "calculation_software_reference": {
                    "type": "string",
                    "label": {
                        "ja": "ソフトウェア参照",
                        "en": "Software reference"
                    }
                },
                "calculation_operator": {
                    "type": "string",
                    "label": {
                        "ja": "計算実行者",
                        "en": "Operator"
                    },
                    "default": "RDE"
                },
                "calculation_calculated_date": {
                    "type": "string",
                    "label": {
                        "ja": "計算日",
                        "en": "Calculated date"
                    },
                    "format": "date",
                    "options": {
                        "placeholder": {
                            "ja": "登録日から自動取得します",
                            "en": "Automatically get from the registration date"
                        }
                    }
                },
                "calculation_material_name": {
                    "type": "string",
                    "label": {
                        "ja": "物質名",
                        "en": "Material name"
                    }
                },
                "calculation_key_object": {
                    "type": "string",
                    "label": {
                        "ja": "キーの配列/計算される主な物性",
                        "en": "Key object"
                    }
                }
            }
        }
    }
}
